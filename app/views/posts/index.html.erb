<p id="notice"><%= notice %></p>

<h1>スケジュール一覧</h1>

<table>
  <thead>
    <tr>
      <th>id</th>
      <th>タイトル</th>
      <th>開始日</th>
      <th>終了日</th>
      <th>終日</th>
      <th>更新日時</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.id %></td>
        <td><%= post.title %></td>
        <td><%= post.start_date %></td>
        <td><%= post.end_date %></td>
        <td><%= post.all_day ? '◯' : ' ' %></td>
        <td><%= post.updated_at.strftime('%Y/%m/%d %H:%M:') %></td>
        <td><%= link_to '詳細', post %></td>
        <td><%= link_to '編集', edit_post_path(post) %></td>
        <td><%= link_to '削除', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<div>
<p> 予定の合計 <%= @schedule_total %> | 本日の日付 <%= Time.now.strftime('%Y/%m/%d')%></p>
</div>
